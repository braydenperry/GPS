@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mb-3 mt-3">
    <table class="table table-striped table-bordered mydatatable" style="width: 100%">
        <thead>
            <tr>
                <th>Vehicle ID</th>
                <th>Number</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Type</th>
                <th>Reference</th>
            </tr>
        </thead>
        <tbody>


            @foreach (var outage in Model.allOutages)
            {
                <tr>
                    <td>@outage.SatelliteVehicleId </td>
                    <td>@outage.SatelliteVehicleNumber</td>
                    <td>@outage.StartYear/@outage.StartDayOfYear</td>
                    <td>@outage.EndYear/@outage.EndDayOfYear</td>
                    <td>@outage.Type</td>
                    <td>@outage.Reference</td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <th>Vehicle ID</th>
                <th>Number</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Type</th>
                <th>Reference</th>
            </tr>
        </tfoot>

    </table>
</div>

@section Scripts {
    <script src="~/js/data-table.js"></script>
}