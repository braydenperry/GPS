@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <table id="DT_load" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        Tag Name
                    </th>
                    <th>
                        Satellite Vehicle ID
                    </th>
                    <th>
                        Satellite Vehicle Number
                    </th>
                    <th>
                        Start Time
                    </th>
                    <th>
                        End Time
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Reference
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/data-table.js"></script>
}


